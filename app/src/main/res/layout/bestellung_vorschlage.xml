<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/LightYellow"
        android:orientation="horizontal" >
        
        <EditText 
            android:id="@+id/monatUmsatzEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13pt"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Monatsumsatz"
            android:inputType="phone"/>

        
        <Button
            android:id="@+id/berechnenBtn"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:textSize="13pt"
            android:text="Berechnen" />
    </LinearLayout>

    <de.hx.bokIQTablleAltona.widgets.TwoDScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar" >

        <TableLayout
            android:id="@+id/bestellungsvorschlagTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/OrangePutty"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="@color/Brown" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Artikelname"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Bes."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Total"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Portion"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Portion pro Tag"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Einkaufspr."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Net.Einkauf"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Verkaufspr."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Net.Umsatz"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Anteil"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:background="@color/White"
                    android:text="Wareneinsatz"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </de.hx.bokIQTablleAltona.widgets.TwoDScrollView>

</RelativeLayout>